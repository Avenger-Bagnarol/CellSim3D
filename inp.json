// Input configuration for celldiv
// This file follows the json format

{
    // First we have the core parameters for the simulation
    // The simulation cannot be run without these
    // RESCALING
    "core": {
        "particle_mass": 0.04, // 0.00004
        "repulsion_range": 0.2, // 1.0
        "attraction_range": 0.3, // 1.5
        "repulsion_strength": 100.0,
        "attraction_strength": 0.5,
        "Youngs_mod": 1000.0, // 1.0
        "viscotic_damping": 15, // 0.015
        "internal_damping": 100.0, // 0.1
        "gamma_visc": 5, // 0.005
        "division_Vol": 2.9, // 10.0
        "random_z_offset?": 0,
        "z_offset": 0.0, // added to a random value if random_z_offset == 1
        "div_time_steps": 10000,
        "time_interval": 0.0001,
        "Restart": 0,
        "trajWriteInt": 100,
        "non_div_time_steps": 5000,
        "trajFileName": "traj_billiards.xyz",
        "maxPressure": 65.0, // 0.065
        "minPressure": 50.0, // 0.050
        "growth_rate": 0.008 // 0.00004
