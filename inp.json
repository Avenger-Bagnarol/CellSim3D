// Input configuration for celldiv
// This file follows the json format

{
    // First we have the core parameters for the simulation
    // The simulation cannot be run without these
    "core": {
        "particle_mass": 0.04,
        "repulsion_range": 0.2,
        "attraction_range": 0.3,
        "repulsion_strength": 100.0,
        "attraction_strength": 0.5,
        "Youngs_mod": 1000.0,
        "viscotic_damping": 2.0,
        "internal_damping": 100.0,
        "division_Vol": 2.9,
        "random_z_offset?": 0,
        "z_offset": 0.0, // added to a random value if random_z_offset == 1
        "div_time_steps": 20000,
        "time_interval": 0.0001,
        "Restart": 0,
        "trajWriteInt": 1000,
        "non_div_time_steps": 100000,
        "trajFileName": "traj_force_test_Pressure50.xyz",
        "maxPressure": 65.0,
        "minPressure": 50.0
    },
    // Now params related to cell counting
    // In theory, these params are not needed for the simulation to run.
    // But, for now, they must be in this file.
    // They may become truly optional later...
    "counting": {
        "countCells": 0,
        "mit-index_file_name": "mit-index.dat",
        "count_only_internal_cells?": 0,
        "radius_cutoff": 0.6,
        "overwrite_mit_ind_file?": 0,
        "cell_count_int": 1
    },

    // Params related to population modelling

    "population": {
        "doPopModel": 0,
        "totalFood": 5000.0,
        "regular_consumption": 2.0,
        "division_consumption": 10.0,
        "death_release_food": 10.0,
        "haylimit": 10,
        "cellLifeTime": 20000
    },

    // Wall modelling parameters
    "walls": {
        "useWalls": 0,
        "perpAxis": "z",
        "dAxis": 1.0,
        "wallLen": 10.0,
        "wallWidth": 10.0,
        "threshDist": 0.01
    }
}
