// Input configuration for celldiv
// This file follows the json format

{
    // First we have the core parameters for the simulation
    // The simulation cannot be run without these
    // RESCALING
    "core": {
        "MaxNoofC180s": 10000,
        "particle_mass": 0.04, // 0.00004
        "repulsion_range": 0.2, // 1.0
        "attraction_range": 0.3, // 1.5
        "repulsion_strength": 100.0,
        "attraction_strength": 0.5,
        "Youngs_mod": 1000.0, // 1.0
        "viscotic_damping": 15, // 0.015
        "internal_damping": 100.0, // 0.1
        "gamma_visc": 5, // 0.005
        "division_Vol": 2.9, // 10.0
        "random_z_offset?": 0,
        "z_offset": 0.0, // added to a random value if random_z_offset == 1
        "div_time_steps": 10000,
        "time_interval": 0.0001,
        "Restart": 0,
        "trajWriteInt": 100,
        "non_div_time_steps": 5000,
        "trajFileName": "traj_billiards.xyz",
        "binaryOutput": 0,
        "maxPressure": 65.0, // 0.065
        "minPressure": 50.0, // 0.050
        "growth_rate": 0.008, // 0.00004
        "checkSphericity": 0,
        "constrainAngles": 1,
        "doAdaptive_dt": 0,
        "dt_max": 1e-4,
        "dt_tol": 1e-8
    },
    // Now params related to cell counting
    // In theory, these params are not needed for the simulation to run.
    // But, for now, they must be in this file.
    // They may become truly optional later...
    "counting": {
        "countCells": 0,
        "mit-index_file_name": "mit-index_big_wall_gamma5.dat",
        "count_only_internal_cells?": 0,
        "radius_cutoff": 0.6,
        "overwrite_mit_ind_file?": 0,
        "cell_count_int": 1000
    },

    // Params related to population modelling

    "population": {
        "doPopModel": 0,
        "totalFood": 5000.0,
        "regular_consumption": 2.0,
        "division_consumption": 10.0,
        "death_release_food": 10.0,
        "haylimit": 10,
        "cellLifeTime": 20000
    },

    // Wall modelling parameters
    "walls": {
        "useWalls": 0,
        "perpAxis": "z",
        "dAxis": 1.0,
        "wallLen": 10.0,
        "wallWidth": 10.0,
        "threshDist": 0.01
    },

    // Division parameters
    "divParams":{ // these params will make the division planes perpendicular
                  // to the vector defined by the basis vector
        "useDivPlaneBasis": 0,
        "divPlaneBasisX": 1,
        "divPlaneBasisY": 1,
        "divPlaneBasisZ": 1
    },

    // Stiffness parameters
    "stiffnessParams":{
        "useDifferentStiffnesses": 0, // below values must be changed if this is 1
        "softYoungsMod": 800,
        "numberOfSofterCells": 0, // Don't use this param, it really sucks
                                  // fractionOfSofterCells is 10x better
        "fractionOfSofterCells": -1, // if this is > 0, numberOfSofterCells ignored
        "daughtSameStiffness": 0,
        "daughtSameStiffness": 0,
        "duringGrowth": 0, // If this is true, everything below is ignored
        "closenessToCenter": 0, // cells within R*(1-ctc) will be softened, ctc=0.9 means very close
        "startAtPop": 2000,
        "chooseRandomCellIndices": 0 // if this is one, closenessToCenter is ignored
    },

    // Rigid box parameters
    "boxParams":{
        "useRigidSimulationBox": 0,
        "usePBCs": 0,
        "boxLength": 5.0
    }
}
