        "regular_consumption": 2.0,
        "division_consumption": 10.0,
        "death_release_food": 10.0,
        "haylimit": 10,
        "cellLifeTime": 20000
    },

    // Wall modelling parameters
    "walls": {
        "useWalls": 0,
        "perpAxis": "z",
        "dAxis": 1.0,
        "wallLen": 10.0,
        "wallWidth": 10.0,
        "threshDist": 0.01
    }
}
